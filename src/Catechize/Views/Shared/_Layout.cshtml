<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    @Html.Stylesheet("Site")
    @Html.Stylesheet("Catechize")
    @RenderSection("Style", false)
</head>

<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>My MVC Application</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="menucontainer" style="clear: left;">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@LinkTo.ListCourses()</li>
                    @if (User.Identity != null && String.IsNullOrEmpty(User.Identity.Name) == false)
                    {
                        <li>@(LinkTo.Action<Catechize.Controllers.UserController>(c => c.Index(User.Identity.Name)))</li>
                        <li>@LinkTo.ViewMyAccount()</li>
                    }
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>

    @Html.Script("jquery-1.4.4.min")
    @Html.Script("jquery.validate.min")
    @Html.Script("jquery.validate.unobtrusive.min")
    @Html.Script("jquery.unobtrusive-ajax.min")

    @RenderSection("Script", false)
</body>
</html>
