@if (Request.IsAuthenticated)
{
    <table border="0" cellpadding="0" cellspacing="0" style="float: right;">
        <tr>
            <td style="width: 40px"> @Html.Gravatar(Membership.GetUser().Email)</td>
            <td><text>Welcome <b>@Context.User.Identity.Name</b>! 
            [ @Html.ActionLink("Log Off", "LogOff", "Account") ]</text></td>
        </tr>
    </table>
   
}
else
{
    @:[ @Html.ActionLink("Log On", "LogOn", "Account") ]
}
