@model IEnumerable<Catechize.Model.Course>
@{
    ViewBag.Title = "ListAllCourses";
}
<h2>
    Courses</h2>
<p>
    @LinkTo.NewCourse()
</p>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            IsEnabled
        </th>
         <th>
            Languages available
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="@(item.IsEnabled ? "" : "disabled")">
            <td>
                @LinkTo.ViewCourse(item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>
            <td>
                @foreach(Catechize.Model.CourseLanguage language in item.Translations) {
                    @language.Culture.NativeName;
                }
            </td>
        </tr>
    }
</table>
